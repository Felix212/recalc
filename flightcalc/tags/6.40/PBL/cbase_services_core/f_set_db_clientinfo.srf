integer i

select f_set_clientinfo(:arg_instance) into :i from dual using arg_trans;

if arg_trans.SQLCODE <> 0 then
	guoLog.uf_error("[f_set_db_clientinfo] Error setting 'Client Info' "+ string( arg_trans.SQLCODE) + " " +  arg_trans.SQLERRTEXT)
end if

return i


end function

