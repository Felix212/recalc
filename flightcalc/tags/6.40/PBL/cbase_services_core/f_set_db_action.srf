global function integer f_set_db_action (string arg_action, transaction arg_trans);// --------------------------------------------------------------------------------------------------------------------
// Objekt : f_set_db_action
// Methode:  (Event)
// Autor  : Heiko Rothenbach
// --------------------------------------------------------------------------------------------------------------------
// Argument(e): 
// string			arg_action	     Action to store in DB
// transaction	arg_trans		transaction who should be used
// --------------------------------------------------------------------------------------------------------------------
// Return: integer 
// --------------------------------------------------------------------------------------------------------------------
//  Beschreibung: 
//
//
// --------------------------------------------------------------------------------------------------------------------
//  Modifikationen:
//  Datum       Version  Autor          Kommentar
// --------------------------------------------------------------------------------------------------------------------
//  01.09.2022	   1.0      H.Rothenbach   Erstellung
//
// --------------------------------------------------------------------------------------------------------------------

integer i

select f_set_action(:arg_action) into :i from dual using arg_trans;

if arg_trans.SQLCODE <> 0 then
	guoLog.uf_error("[f_set_db_action] Error setting 'Action' "+ string( arg_trans.SQLCODE) + " " +  arg_trans.SQLERRTEXT)
end if

return i


end function

