  into :sSpml
  from sys_spml
 where sys_spml.nspml_key = :lSPMLKey; 

if sqlca.sqlcode = 0 then
	return sSPML
elseif sqlca.sqlcode = 100 then
	return "not found"
else
	return "Error"
end if


end function

